zhead() {
   if [[ "$1" =~ "^-n" ]]; then
      shift
      hopt="-n $1"
      shift
   elif [[ "$1" =~ "^-" ]]; then
      hopt=$1
      shift
   fi
   for f in $@; do
      echo $f >&2
      zcat -f $f | head $hopt
   done
   unset hopt
}

