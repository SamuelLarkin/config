ln -s config/.alias $HOME
ln -s config/.bashrc.custom $HOME/.bashrc.$USER
ln -s config/.gdbinit $HOME
ln -s config/.gitconfig $HOME
ln -s config/.gitignore_global $HOME
ln -s config/.screenrc $HOME
ln -s config/.toprc $HOME
ln -s config/.vimrc $HOME
git clone https://github.com/VundleVim/Vundle.vim.git $HOME/.vim/bundle/Vundle.vim
vim +:PluginInstall

git clone https://github.com/tmux-plugins/tpm $HOME/.tmux/plugins/tpm

cat >> $HOME/.bashrc <<EOL


# User specific aliases and functions
[[ -e ~/.alias ]] && . ~/.alias || true
[[ -e ~/.bashrc.$USER ]] && . ~/.bashrc.$USER || true
EOL
